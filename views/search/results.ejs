<% layout("/layouts/boilerplate") %>
<h2>Search results <%= q ? ('for "' + q + '"') : '' %> <%= type ? ('in ' + type) : '' %></h2>

<div class="row row-cols-lg-3 rows-cols-md-2 row-cols-sm-1 mt-3">
  <% results.forEach(function(item){ %>
    <a href="/listings/<%= item._id %>" class="listing-link">
      <div class="card col listing-card">
        <img 
          src="<%= item.image?.url %>"
          class="card-img-top" 
          alt="listing_image" 
          style="height: 20rem;"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= item.title %></b> <br>
            <span class="badge bg-secondary"><%= item.type %></span><br>
            <%= item.location %>, <%= item.country %>
          </p>
        </div>
      </div>
    </a>
  <% }) %>
</div>
